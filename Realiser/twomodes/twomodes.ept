node twomodes (v:int;d:bool) = (y:int;b:bool)
contract
	assume (v <= 1) & (v >= 0)
	enforce (y <= 10) & (y >= 0)
	with (c:bool)

var last x : int = 0;
let
	y = x;
	automaton
		state Up
			do x = last x + v;
                           b = true
			until c & d then Down
		state Down
			do x = last x - v;
			   b = false
			until not c then Up
	end
tel
